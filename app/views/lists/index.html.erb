<h1>Books</h1>
<table>
  <thead><tr>
    <th>Title</th><th>Body</th><th colspan="3"></th>
    </tr></thead>
  <tbody><% @lists.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.body %></td>
      <td><%= link_to 'Show', list %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list_path(@list.id), method: :delete, "deta-confirm" => "Are you sure?" %></td>
    </tr>
   <% end %>
  </tbody>
</table>



<h2>New Book</h2>
<%= form_with model: @list do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>